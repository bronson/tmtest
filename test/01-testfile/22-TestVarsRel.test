# Make sure the variables are set up correctly when we are running a
# test with a relative pathname.

cat > tt <<-'EOL'
	echo MYDIR:    "$MYDIR"
	echo MYFILE:   "$MYFILE"
	echo TESTDIR:  "$TESTDIR"
	echo TESTFILE: "$TESTFILE"
EOL

$tmtest $args --ignore-extension -o -q . | \
  sed -e "s/${PWD//\//\\/}/\/tmp\/DIR/g" -e "s/^/    /"

rm tt


STDOUT:
    echo MYDIR:    "$MYDIR"
    echo MYFILE:   "$MYFILE"
    echo TESTDIR:  "$TESTDIR"
    echo TESTFILE: "$TESTFILE"
    STDOUT:
    MYDIR: /tmp/DIR
    MYFILE: /tmp/DIR/tt
    TESTDIR: /tmp/DIR
    TESTFILE: /tmp/DIR/tt
