# Ensure  variables are set up plausibly when we're running a test
# from stdin.

$tmtest $args -o -q - <<-'EOL' | sed "s/^/    /"
	echo MYFILE:   "$MYFILE"
	echo TESTFILE: "$TESTFILE"
	[ "$MYDIR" = "$TESTDIR" ] && echo "they're equal"
EOL

STDOUT:
    echo MYFILE:   "$MYFILE"
    echo TESTFILE: "$TESTFILE"
    [ "$MYDIR" = "$TESTDIR" ] && echo "they're equal"
    STDOUT:
    MYFILE: (STDIN)
    TESTFILE: (STDIN)
    they're equal
