# tests tmtest -d | patch -p0 in a hierarchy
# Updated for tmtest 2.0 on 29 Jan 2005

# tt/t.test
# tt/one/t.test
# tt/two/t1.test
# tt/two/t2.test
# tt/two/one/t.test


MKDIR tt
cd "$tt" || ABORT "Could not cd to $tt"

cat > t.test <<-EOL
	echo "right output1"
	STDOUT:
	wrong output
EOL


mkdir one
cat > one/t.test <<-EOL
	echo "right output2"
	STDOUT:
	wrong output
EOL


mkdir two
cat > two/t1.test <<-EOL
	echo "right output3"
	STDOUT:
	wrong output
EOL

cat > two/t2.test <<-EOL
	echo "right output4"
	STDOUT:
	wrong output
EOL


mkdir two/one
cat > two/one/t.test <<-EOL
	echo "right output5"
	STDOUT:
	wrong output
EOL


tmtest --ignore-extension -d | FIX_DIFF

rm -rf t.test one two


